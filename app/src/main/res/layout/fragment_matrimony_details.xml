                        <TextView
                            android:layout_marginTop="15dp"
                            android:id="@+id/dob"
                            android:textSize="18sp"
                            android:text="DOB: 1992-03-15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="15dp"
                            android:id="@+id/age"
                            android:textSize="18sp"
                            android:text="AGE: 20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:layout_marginTop="15dp"
                            android:id="@+id/height"
                            android:textSize="18sp"
                            android:text="HEIGHT: 5.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="15dp"
                            android:id="@+id/weight"
                            android:textSize="18sp"
                            android:text="WEIGHT: 40"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/birth_place"
                            android:layout_marginTop="15dp"
                            android:textSize="18sp"
                            android:text="BIRTH PLACE: KURLA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/birth_time"
                            android:layout_marginTop="15dp"
                            android:textSize="18sp"
                            android:text="BIRTH TIME: 12:37:00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/mother_name"
                            android:layout_marginTop="15dp"
                            android:textSize="18sp"
                            android:text="Mother Name: XDXDGGXD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/education"
                            android:layout_marginTop="15dp"
                            android:textSize="18sp"
                            android:text="EDUCATION: PRE &amp; PRIMARY SCHOOL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

