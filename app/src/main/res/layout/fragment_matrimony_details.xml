                            android:id="@+id/occupation"
                            android:layout_marginTop="15dp"
                            android:textSize="18sp"
                            android:text="OCCUPATION: STUDENT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
