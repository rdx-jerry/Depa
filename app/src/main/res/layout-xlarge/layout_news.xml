<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:id="@+id/frame"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/newsCv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardview:cardUseCompatPadding="true"
        cardview:cardPreventCornerOverlap="true"
        cardview:cardCornerRadius="5dp"
        cardview:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/newsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Human Resource"
                    android:textSize="32dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: "
                        android:textSize="30dp" />
                    <TextView
                        android:id="@+id/dateTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00/00/0000"
                        android:textSize="30dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/readTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descffffffffffffffffffffffffffffffffffffffffffhhhhhhhhhhhhhhhhhkkkfkfkfkfkfkkfkfkfkfkfkkfkfkfkfkfkkfkfkfkfkfkfkkfkfkfkfkfkfkfkfkfkfkfkfkfkfkkfkfkfkfkkkfkfk"
                    android:maxLength="60"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/newsIv"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/img8"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
