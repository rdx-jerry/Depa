<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.animator.navigation.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home"
        app:showAsAction="ifRoom"/>
    <fragment
        android:id="@+id/nav_news"
        android:name="com.animator.navigation.ui.latest.LatestFragment"
        android:label="Latest"
        tools:layout="@layout/fragment_latest"
        app:showAsAction="ifRoom"/>
    <fragment
        android:id="@+id/nav_todays"
        android:name="com.animator.navigation.ui.todays.TodaysFragment"
        android:label="Todays"
        tools:layout="@layout/fragment_todays"
        app:showAsAction="ifRoom"/>
    <fragment
        android:id="@+id/nav_profile"
        android:name="com.animator.navigation.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile"
        app:showAsAction="ifRoom"/>
</navigation>